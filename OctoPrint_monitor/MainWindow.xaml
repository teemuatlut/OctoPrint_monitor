<Window x:Class="OctoPrint_monitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        xmlns:tb="http://www.hardcodet.net/taskbar" Closing="Window_Closing" >
    <Grid>
        <Button x:Name="SaveButton" Content="Save settings" HorizontalAlignment="Left" Margin="137,28,0,0" VerticalAlignment="Top" Width="90" Height="35" Click="saveSettingsToFile"/>
        <TextBlock x:Name="TextBlock1" HorizontalAlignment="Left" Margin="10,146,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="164" Width="497"/>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Height="23" Margin="281,40,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="loadButton" Content="Load settings" HorizontalAlignment="Left" Margin="137,68,0,0" VerticalAlignment="Top" Width="90" Height="39" Click="readSettingsFile"/>
        <Button x:Name="connectBtn" Content="Start timer" HorizontalAlignment="Left" Margin="25,28,0,0" VerticalAlignment="Top" Width="107" Height="35" Click="connectBtn_Click"/>
        <Button x:Name="settingsBtn" Content="Open settings" HorizontalAlignment="Left" Margin="25,68,0,0" VerticalAlignment="Top" Width="107" Height="39" Click="settingsBtn_Click"/>

    </Grid>
</Window>

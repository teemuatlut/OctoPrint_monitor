<Window x:Class="OctoPrint_monitor.settingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:win="clr-namespace:System.Windows;assembly=System.Windows"
        Title="Settings save when closing" Height="300" Width="300" Closing="Window_Closing" Topmost="True" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <sys:String x:Key="APIbox_key">string1</sys:String>
        <sys:String x:Key="IPbox_key">string2</sys:String>
        <Visibility x:Key="OK_icon_visibility">Hidden</Visibility>
    </Window.Resources>
    <Grid x:Name="GridMain">
        <Button x:Name="connBtn" Content="Test connection" HorizontalAlignment="Left" Margin="28,84,0,0" VerticalAlignment="Top" Width="120" Click="connBtn_Click"/>
        <TextBox x:Name="IPBox" HorizontalAlignment="Left" Height="23" Margin="28,21,0,0" TextWrapping="Wrap" Text="{DynamicResource IPbox_key}" VerticalAlignment="Top" Width="254" MouseUp="IPBox_MouseUp"/>
        <TextBox x:Name="APIBox" HorizontalAlignment="Left" Height="23" Margin="28,49,0,0" TextWrapping="Wrap" Text="{DynamicResource APIbox_key}" VerticalAlignment="Top" Width="254"/>
        <Image x:Name="ConnOKico" HorizontalAlignment="Left" Height="22" Margin="153,84,0,0" VerticalAlignment="Top" Width="24" Source="Icons/Oxygen-Icons.org-Oxygen-Actions-dialog-ok-apply.ico" Visibility="{DynamicResource OK_icon_visibility}"/>
        <Label Content="IP" HorizontalAlignment="Left" Margin="8,19,0,0" VerticalAlignment="Top"/>
        <Label Content="API" HorizontalAlignment="Left" Margin="0,46,0,0" VerticalAlignment="Top"/>
        <Label Content="Update interval" HorizontalAlignment="Left" Margin="10,111,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UpdateBox" HorizontalAlignment="Left" Height="22" Margin="106,113,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="53"/>
        <CheckBox x:Name="barCheck" Content="Progress bar" HorizontalAlignment="Left" Margin="10,142,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
        <Button x:Name="greenBtn" Content="Green" HorizontalAlignment="Left" Margin="14,175,0,0" VerticalAlignment="Top" Width="76" Click="greenBtn_Click"/>
        <Button x:Name="yellowBtn" Content="Yellow" HorizontalAlignment="Left" Margin="132,175,0,0" VerticalAlignment="Top" Width="75" Click="yellowBtn_Click"/>
    </Grid>
</Window>

<Window x:Class="OctoPrint_monitor.settingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="settingsWindow" Height="300" Width="300" Closing="Window_Closing">
    <Grid>
        <Button x:Name="connBtn" Content="Test connection" HorizontalAlignment="Left" Margin="28,84,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="IPBox" HorizontalAlignment="Left" Height="23" Margin="10,21,0,0" TextWrapping="Wrap" Text="IP" VerticalAlignment="Top" Width="272" Grid.ColumnSpan="2"/>
        <TextBox x:Name="APIBox" HorizontalAlignment="Left" Height="23" Margin="10,49,0,0" TextWrapping="Wrap" Text="API-key" VerticalAlignment="Top" Width="272" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
